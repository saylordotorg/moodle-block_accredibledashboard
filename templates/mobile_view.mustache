{{!
    @template block_accredibledashboard/mobile_view

    List of user's Accredible certificates

    Classes required for JS:
    * none

    Data attributes required for JS:
    * CONTENT_OTHERDATA.messages
    * CONTENT_OTHERDATA.moreMessages

    Context variables required for this template:
    * none

    Example context (json):
    {}

}}
{{=<% %>=}}

<ion-card>
    <ion-list>

        <ion-item-divider>
            <h2>{{ 'plugin.block_accredibledashboard.heading' | translate }}</h2>
        </ion-item-divider>

        <%#credentials%>

        <button ion-item core-link onclick="window.location.href='<%url%>'">
            <ion-label>
                <img float-left class="cert-icon" style="height: 32px; width: 32px; margin-right: 8px;" slot="start" src="<%image%>"><div style="padding-top: 5px;"><%name%></div>
            </ion-label>
        </button>

        <%/credentials%>
    </ion-list>
</ion-card>
